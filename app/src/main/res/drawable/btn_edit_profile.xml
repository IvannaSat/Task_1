<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/btn_stroke_width" android:color="@color/color_text_additional"/>
            <corners android:radius="@dimen/btn_corner_radius_pressed"/>
            <solid android:color="@color/color_text_secondary"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/btn_stroke_width" android:color="@color/color_text_additional"/>
            <corners android:radius="@dimen/btn_corner_radius"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

</selector>